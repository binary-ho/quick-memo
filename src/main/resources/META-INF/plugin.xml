<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
    <id>com.quickmemo.plugin</id>
    <name>Quick Memo</name>
    <vendor email="binaryhoho@gmail.com" url="https://github.com/binary-ho">binary-ho</vendor>
    <icon value="/icons/memo.svg"/>
    <resource-bundle>icons.memo_light</resource-bundle>

    <description><![CDATA[
    Free your Brain, Just Memo It\n
    생각을 뇌에서 놓아주세요. 그냥 메모하세요

    - default-keymap
        - macOS: Command + Option + M
        - windows/linux: Ctrl + M

    - how to change keymap
        1. Settings/Preferences -> Keymap
        2. search "New Quick Memo"
        3. change keymap
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="QuickMemo"
                    secondary="true"
                    icon="/icons/memo.svg"
                    anchor="right"
                    factoryClass="com.quickmemo.plugin.window.MemoToolWindowFactory"
                    canCloseContents="true"
                    doNotActivateOnStart="true"
                    style="FLOATING"/>
    </extensions>
    
    <actions>
        <action id="QuickMemo.NewNote" 
                class="com.quickmemo.plugin.action.NewMemoAction" 
                text="New Quick Memo" 
                description="Create a new quick memo">
            <add-to-group group-id="ToolsMenu" anchor="first"/>

            <!-- Windows/Linux: Ctrl + Alt + M -->
            <keyboard-shortcut keymap="$default" first-keystroke="control M" replace-all="true"/>

            <!-- macOS: Command + Option + M -->
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta alt M"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta alt M"/>
        </action>
    </actions>
</idea-plugin>